{
  "name": "hands-off",
  "version": "0.1.0",
  "description": "An app to help streamers quickly release and claim their content",
  "private": true,
  "main": "public/electron.js",
  "author": "https://github.com/mace-stev",
    "engines": {
    "node": "v18.17.1"
  },
  "build": {
    "includeSubNodeModules": true,
    "directories":{
  "output": "dist"
    },
    "signIgnore": true,
    "files": [
      "package.json",
      {
        "from":"./public",
        "to": "public",
        "filter": ["**/*"]
      },
      {
        "from": "./controllers",
        "to": "controllers",
        "filter": ["**/*"]
      },
      {
        "from": "./routes",
        "to": "routes",
        "filter": ["**/*"]
      },
      {
        "from": "./knexfile.js",
        "to": "knexfile.js",
        "filter": ["**/*"]
      }
    ]
  },
  "devDependencies": {
    "@mysql/xdevapi": "^8.0.35",
    "@ngrok/ngrok": "^0.9.1",
    "@ngrok/ngrok-api": "^0.10.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "build": "^0.1.4",
    "cli-progress": "^3.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron": "^26.6.3",
    "electron-builder": "^24.9.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "form-data": "^4.0.0",
    "fs": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "keytar": "^7.9.0",
    "knex": "^2.5.1",
    "mysql": "^2.18.1",
    "mysql2": "^3.6.5",
    "nodemon": "^3.0.1",
    "nth-check": "^2.1.1",
    "obs-websocket-js": "^5.0.3",
    "run": "^1.4.0",
    "svgo": "^3.0.4",
    "tls": "^0.0.1",
    "uuid": "^9.0.1",
    "web-vitals": "^2.1.4",
    "ws": "^8.14.2"
  },
  "scripts": {
    "start:electron": "electron .",
    "start": "npm run start:electron",
    "build:frontend": "cd hands-off-frontend && npm install && npm run build",
    "build:electron": "electron-builder --publish never ",
    "build": "npm install && npm run build:frontend && npm run build:electron",
    "migrate": "knex migrate:latest",
    "migrate:down": "knex migrate:down",
    "migrate:rollback": "knex migrate:rollback"
  },
  
 
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
